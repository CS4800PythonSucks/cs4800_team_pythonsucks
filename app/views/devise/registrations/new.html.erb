<%= render "posts/general_nav_bar" %>

<div style="padding-top: 120px;">
  <div class="login-form card text-center">
    <img class="mb-4" src="/assets/billy_bronco.png" width="100" height="100">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "form-signin"}) do |f| %>
    <h1 class="h3 mb-3">Sign up</h1>
    <br>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-label-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control email-field", :placeholder => "Email address"%>
    </div>
    <div class="form-label-group" style="padding-top: 20px">
      <%= f.password_field :password, autocomplete: "current-password", :class => "form-control password-field", :placeholder => "Password" %>
      <%= f.password_field :password, autocomplete: "current-password", :class => "form-control password-field", :placeholder => "Confirm Password" %>
    </div>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    <div class="actions" style="padding-top: 20px;">
      <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </div>
</div>
