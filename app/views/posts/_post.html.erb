<div class="row">
  <div class="jumbotron">
    <div class="card mb-4 shadow-sm" width="100%" height="100%">
      <p class="card-text text-center"><%= post.title %></p><br>
      <span class="label label-success">Upvotes: <%= post.votes %></span>
      <span class="label label-info">Created: <%= post.timestamp %></span>
      <% if post.is_video %>
      <iframe class="center" src=<%= post.link %> data-title=<%= post.nb_title %> width="100%" height="480px">iframe not supported</iframe>
      <% else %>
      <img class="img-thumbnail center" src=<%= post.link %> data-title=<%= post.nb_title %> width="100%" height="100%"><br>
      <% end %>
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <br><br>
          <div class="btn-group">
            <form action=<%= post.source %> method="get" target="_blank">
              <button type="submit" class="btn btn-md btn-info">Source</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
